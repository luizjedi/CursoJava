<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <ComboBox fx:id="comboBoxPerson" layoutX="14.0" layoutY="14.0" onAction="#onComboBoxPersonAction" prefWidth="150.0" promptText="Select a person">
         <effect>
            <InnerShadow>
               <color>
                  <Color red="0.22382672131061554" blue="1.0" />
               </color>
            </InnerShadow>
         </effect>
      </ComboBox>
      <Button fx:id="btAll" layoutX="356.0" layoutY="14.0" mnemonicParsing="false" onAction="#onbtAllAction" text="All">
         <effect>
            <InnerShadow>
               <color>
                  <Color red="0.22382672131061554" blue="1.0" />
               </color>
            </InnerShadow>
         </effect>
      </Button>
   </children>
</AnchorPane>
