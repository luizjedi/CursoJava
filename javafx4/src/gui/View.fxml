<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="112.0" layoutY="22.0" text="Calculator Sum" textFill="#f50000">
         <font>
            <Font name="Arial Black" size="21.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="126.0" layoutY="76.0" promptText="First number" />
      <TextField fx:id="txtNumber2" layoutX="126.0" layoutY="125.0" promptText="Second number" />
      <Button fx:id="btSum" layoutX="167.0" layoutY="171.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" textFill="RED">
         <font>
            <Font size="20.0" />
         </font>
         <effect>
            <InnerShadow>
               <color>
                  <Color red="1.0" />
               </color>
            </InnerShadow>
         </effect>
      </Button>
      <Label layoutX="122.0" layoutY="240.0" text="Result = " textFill="#f50000">
         <font>
            <Font name="Arial Bold Italic" size="20.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="212.0" layoutY="237.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
